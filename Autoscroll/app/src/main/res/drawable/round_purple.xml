<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#d50000" />
            <stroke android:width="1.0dip"
                android:color="#d50000" />
            <corners android:radius="5.0dip" />
            <padding android:bottom="0.0dip"
                android:left="0.0dip"
                android:right="0.0dip"
                android:top="0.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="270.0"
                android:endColor="#9c27b0"
                android:startColor="#9c27b0" />
            <stroke android:width="0.5dip"
                android:color="#9c27b0" />
            <corners android:radius="5.0dip" />
            <padding android:bottom="0.0dip"
                android:left="0.0dip"
                android:right="0.0dip"
                android:top="0.0dip" />
        </shape>
    </item>
